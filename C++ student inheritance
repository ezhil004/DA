#include<iostream>
using namespace std;
class person{
    protected:
          string name;
          int age;
    public:
          void setinfo()
              {cout<<"enter name"<<endl;
               cin>>name;
               cout<<"enter age"<<endl;
               cin>>age;}
          
                
};
class student:public person
      {protected:
            int roll;
       public:
          void setroll()
              {cout<<"enter roll"<<endl;
               cin>>roll; }
          void get()   
              {cout<<name;
               cout<<age;
               cout<<roll<<endl;}     };
int main()
     { student obj;
       obj.setinfo();
       obj.setroll();
       obj.get();
       
     }

