#include<stdio.h>

int main()
{   int choice, num, i,flag=1,prime=0;
    int fact=1;

    while(flag)
    {
        printf("1. Factorial \n");
        printf("2. Prime\n");
        printf("3. Odd\\Even\n");
        printf("4. Exit\n\n\n");
        printf("Enter your choice :  ");
        scanf("%d",&choice);
        switch(choice)
        {      
        case(1):
             {scanf("%d",&num);
              for(i=1;i<=num;i++)
                           {fact=fact*i;}
              printf("%d",fact);  
             }
        case(2):
            {scanf("%d",&num);
            if(num==1)
                   { printf("2ndum illa");
                     break;}
            else
               {for(i=2;i<num;i++)
                          {  if(num%i==0)
                                    {printf("not a prime");
                                     prime=1;
                                     break;}
                          }  
                if(prime==1) 
                        {  break;}
                if(num==i)  
                     {printf("prime num ");
                      break;}
                }        
            }
        case(4):
              {printf("byeee");
              flag=0;
              break;}
              
              
               
        
        }
    }
}
